extends layout

block content
  h1.text-center.mt-3= title
  p.text-center.mt-3 #{secondaryTitle}
  .container
    form(method='post', action='/comments/add').pt-3
      .row
        .col-sm-12
          .form-group
            label.col-form-label.mb-2(for='post_id') Post Number
            input.form-control(type='number', placeholder='Post Number', id='post_id', name='post_id' required)
        .col-sm-12
          .form-group
            label.col-form-label.mb-2(for='body') Comment
            input.form-control(type='text', placeholder='Comment', id='body', name='body' required)
        .col-sm-12
          .form-group
            label.col-form-label.mb-2(for='reader') Reader
            input.form-control(type='text', placeholder='Reader', id='reader', name='reader' required)
        .col-sm-12
          .form-group
            input.form-control(type='hidden', placeholder='Comment Added', id='comment_created', name='comment_created', value=moment().format("YYYY-MM-DD k:mm:ss"))
        .col-sm-6
      button.btn.btn-primary.col-sm-2(type='submit') Submit
